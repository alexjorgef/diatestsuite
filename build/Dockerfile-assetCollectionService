FROM golang:1.17-alpine AS build

RUN apk add --no-cache make gcc musl-dev linux-headers git bash

WORKDIR $GOPATH/src/

RUN git clone https://github.com/diadata-org/diadata

RUN cp -r diadata/cmd/assetCollectionService/* ./
RUN mkdir /config/
RUN cp -r diadata/config/* /config/

RUN go mod tidy && CGO_ENABLED=0 go install

FROM gcr.io/distroless/base:debug

COPY --from=build /go/bin/assetCollectionService /bin/assetCollectionService
COPY --from=build /config/ /config/

CMD ["assetCollectionService"]