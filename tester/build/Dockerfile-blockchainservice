FROM us.icr.io/dia-registry/devops/build-117:latest as build

WORKDIR $GOPATH/src/

COPY ./cmd/services/blockchainservice ./
COPY . /diadata
RUN go mod edit -replace github.com/diadata-org/diadata=/diadata
RUN go mod tidy && go install

FROM gcr.io/distroless/base

COPY --from=build /go/bin/blockchainservice /bin/blockchainservice
COPY --from=build /config/ /config/

CMD ["blockchainservice"]