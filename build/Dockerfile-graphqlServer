FROM golang:1.19-alpine AS build

RUN apk add --no-cache make gcc musl-dev linux-headers git bash

WORKDIR $GOPATH/src/

RUN git clone https://github.com/diadata-org/diadata

RUN cp -r diadata/cmd/http/graphqlServer/* ./
RUN mkdir /schema/
RUN cp -r diadata/cmd/http/graphqlServer/schema/* /schema/

RUN go mod tidy -go=1.16 && go mod tidy -go=1.17 && CGO_ENABLED=0 go install

FROM gcr.io/distroless/base:debug

COPY --from=build /go/bin/graphqlServer /bin/graphqlServer
COPY --from=build /schema/ /schema/

CMD ["graphqlServer"]